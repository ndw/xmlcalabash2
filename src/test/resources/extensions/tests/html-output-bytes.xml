<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0" expected="pass">

<t:info>
  <t:title>Test byte output for text/html</t:title>
  <t:revision-history>
    <t:revision>
      <t:date>2018-10-23</t:date>
      <t:author initials="ndw">
        <t:name>Norman Walsh</t:name>
      </t:author>
      <t:description xmlns="http://www.w3.org/1999/xhtml">
        <p>Initial checkin.</p>
      </t:description>
    </t:revision>
  </t:revision-history>
</t:info>

<t:description xmlns="http://www.w3.org/1999/xhtml">
  <p>Test that a step that claims to produce <code>text/html</code>
  succeeds if it returns a byte sequence that parses as HTML.
  </p>
</t:description>

<t:pipeline>
  <p:declare-step xmlns:p="http://www.w3.org/ns/xproc"
                  xmlns:cx="http://xmlcalabash.com/ns/extensions"
                  version="3.0">
    <p:output port="result"
              serialization="map { 'omit-xml-declaration': true(),
                                   'indent': true() }"/>

    <p:declare-step type="cx:step-output-test">
      <p:output port="result" content-types="*/*"/>
      <p:option name="content-type" required="true"/>
      <p:option name="result-type" required="true"/>
    </p:declare-step>

    <cx:step-output-test content-type="text/html" result-type="bytes"/>
  </p:declare-step>
</t:pipeline>

<t:schematron>
  <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron"
            xmlns:p="http://www.w3.org/ns/xproc"
            xmlns:rng="http://relaxng.org/ns/structure/1.0">
     <s:ns prefix="p" uri="http://www.w3.org/ns/xproc"/>
     <s:ns prefix="h" uri="http://www.w3.org/1999/xhtml"/>

     <s:pattern>
       <s:rule context="/">
         <s:assert test="count(.) = 1">Result should be a single text node.</s:assert>
         <s:assert test="h:html">Result should be an ‘html’ node.</s:assert>
       </s:rule>
       <s:rule context="h:html">
         <s:assert test="h:head">html should contain a head</s:assert>
         <s:assert test="h:body">html should contain a body.</s:assert>
       </s:rule>
       <s:rule context="h:body">
         <s:assert test="count(*) = 1">body should contain a single node</s:assert>
         <s:assert test="h:p">body should contain a p</s:assert>
         <s:assert test="string(h:p) = 'Some bytes.'">p should contain ‘Some bytes.’</s:assert>
       </s:rule>
     </s:pattern>
  </s:schema>
</t:schematron>
</t:test>
