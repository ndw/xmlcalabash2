<test xmlns='http://xproc.org/ns/testsuite/3.0' expected="pass">
  <pipeline>
<p:declare-step xmlns:p="http://www.w3.org/ns/xproc"
                xmlns:ex="http://xmlcalabash.com/ext/foo"
                xmlns:exf="http://exproc.org/standard/functions"
                xmlns:cx="http://xmlcalabash.com/ns/extensions"
                name="main"
                version="1.0">
  <p:output port="result"/>

  <p:identity name="one">
    <p:input port="source">
      <doc>One</doc>
    </p:input>
  </p:identity>

  <p:identity name="two">
    <p:input port="source">
      <doc>Two</doc>
    </p:input>
  </p:identity>

  <p:identity name="three">
    <p:input port="source">
      <doc>Three</doc>
    </p:input>
  </p:identity>

  <p:identity name="combined">
    <p:input port="source" pipe="three two one"/>
  </p:identity>

  <p:wrap-sequence wrapper="docs"/>
</p:declare-step>
  </pipeline>

  <schematron>
<s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron">
   <s:ns prefix="c" uri="http://www.w3.org/ns/xproc-step"/>

   <s:pattern>
     <s:rule context="/*">
       <s:assert test="self::docs">The pipeline root is not docs.</s:assert>
     </s:rule>
     <s:rule context="/docs">
       <s:assert test="doc[1] = 'Three'">The first document isn’t Three</s:assert>
       <s:assert test="doc[2] = 'Two'">The second document isn’t Two</s:assert>
       <s:assert test="doc[3] = 'One'">The third document isn’t One</s:assert>
     </s:rule>
   </s:pattern>
</s:schema>
  </schematron>

</test>
