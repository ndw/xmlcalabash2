<?xml version="1.0" encoding="UTF-8"?>
<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0" expected="pass">
    <t:info>
        <t:title>p:if-007 (AB)</t:title>
        <t:revision-history>
            <t:revision>
                <t:date>2019-04-06</t:date>
                <t:author>
                    <t:name>Achim Berndzen</t:name>
                </t:author>
                <t:description xmlns="http://www.w3.org/1999/xhtml">
                    <p>New tests</p>
                </t:description>
            </t:revision>
        </t:revision-history>
    </t:info>
    <t:description xmlns="http://www.w3.org/1999/xhtml">
        <p>Test p:if with p:with-input as XPath context.</p>
    </t:description>
    <t:pipeline>
        <p:declare-step xmlns:p="http://www.w3.org/ns/xproc" version="3.0">
            <p:output port="result"/>
            
            <p:identity>
                <p:with-input>
                    <doc a="1"/>
                </p:with-input>
            </p:identity>
            
            <p:if test="/dummy">
                <p:with-input><dummy /></p:with-input>
                <p:add-attribute match="/doc" attribute-name="a" attribute-value="2" />
            </p:if>
            
        </p:declare-step>
    </t:pipeline>
    <t:schematron>
        <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron" xmlns="http://www.w3.org/1999/xhtml">
            <s:pattern>
                <s:rule context="/">
                    <s:assert test="/doc">Root element is not 'doc'.</s:assert>
                    <s:assert test="/doc/@a='2'">Value of @a is not 2.</s:assert>
                </s:rule>
            </s:pattern>
        </s:schema>
    </t:schematron>
</t:test>
