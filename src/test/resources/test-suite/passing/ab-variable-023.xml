<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0" expected="pass">
   <t:info>
      <t:title>Variable declaration 023</t:title>
      <t:revision-history>
         <t:revision>
            <t:date>2018-02-04T17:23:02+01:00</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Some tests fro p:variable</p>
            </t:description>
         </t:revision>
      </t:revision-history>
   </t:info>
   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Check XD008 is not raised if more than one document appears as connection of p:variable and @connection is true.</p>
   </t:description>
   <t:pipeline>
      <p:declare-step xmlns:p="http://www.w3.org/ns/xproc" version="3.0">
            <p:output port="result"/>
            <p:variable name="var" select="5" collection="true">
                <doc/>
                <doc/>
            </p:variable>
            
            <p:identity>
                <p:with-input>
                    <doc/>
                </p:with-input>
            </p:identity>
        </p:declare-step>
   </t:pipeline>
   <t:schematron>
      <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron" xmlns="http://www.w3.org/1999/xhtml">
         <s:pattern>
            <s:rule context="/">
               <s:assert test="doc">The pipeline root is not doc.</s:assert>
               <s:assert test="count(doc/node())=0">The root element should have no children.</s:assert>
            </s:rule>
         </s:pattern>
      </s:schema>
   </t:schematron>
</t:test>