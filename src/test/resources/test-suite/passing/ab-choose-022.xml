<?xml version="1.0" encoding="UTF-8"?>
<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0" expected="pass">
    <t:info>
        <t:title>p:choose-022 (AB)</t:title>
        <t:revision-history>
            <t:revision>
                <t:date>2019-04-05</t:date>
                <t:author>
                    <t:name>Achim Berndzen</t:name>
                </t:author>
                <t:description xmlns="http://www.w3.org/1999/xhtml">
                    <p>New tests</p>
                </t:description>
            </t:revision>
        </t:revision-history>
    </t:info>
    <t:description xmlns="http://www.w3.org/1999/xhtml">
        <p>Tests p:choose with implicit output ports.</p>
    </t:description>
    <t:pipeline>
        <p:declare-step xmlns:p="http://www.w3.org/ns/xproc" version="3.0">
            <p:output port="result"/>
            <p:identity>
                <p:with-input>
                    <document>
                        <title>Some title</title>
                        <para>Some paragraph</para>
                    </document>
                </p:with-input>
            </p:identity>
            <p:choose>
                <p:when test="count(//*) mod 2 = 0">
                     <p:identity>
                        <p:with-input><even /></p:with-input>
                    </p:identity>
                </p:when>
                <p:otherwise>
                    <p:identity>
                        <p:with-input><odd /></p:with-input>
                    </p:identity>
                </p:otherwise>
            </p:choose>
        </p:declare-step>
    </t:pipeline>
    <t:schematron>
        <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron" xmlns="http://www.w3.org/1999/xhtml">
            <s:pattern>
                <s:rule context="/">
                    <s:assert test="/odd">Root element is not 'odd'.</s:assert>
                </s:rule>
            </s:pattern>
        </s:schema>
    </t:schematron>
</t:test>
