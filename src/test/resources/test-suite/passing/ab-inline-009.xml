   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Tests text document with tvt (expand-text='true')</p>
   </t:description>
   <t:pipeline>
      <p:declare-step xmlns:p="http://www.w3.org/ns/xproc" version="3.0">
         <p:output port="result"/>
         <p:variable name="var" select="'test'"/>
         <p:identity>
            <p:with-input>
               <p:inline expand-text="true" content-type="text/plain">This is a {$var}.</p:inline>
            </p:with-input>
         </p:identity>
      
         <p:wrap-sequence wrapper="result"/>
      </p:declare-step>
   </t:pipeline>
   <t:schematron>
      <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron" xmlns="http://www.w3.org/1999/xhtml">
         <s:pattern>
            <s:rule context="/">
               <s:assert test="result">The document root is not result.</s:assert>
               <s:assert test="/result/text()='This is a test.'">The result string is not correct.</s:assert>
            </s:rule>
         </s:pattern>
      </s:schema>
   </t:schematron>
</t:test>