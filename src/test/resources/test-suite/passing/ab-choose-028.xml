<?xml version="1.0" encoding="UTF-8"?>
<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0" expected="pass">
    <t:info>
        <t:title>p:choose-028 (AB)</t:title>
        <t:revision-history>
            <t:revision>
                <t:date>2019-04-05</t:date>
                <t:author>
                    <t:name>Achim Berndzen</t:name>
                </t:author>
                <t:description xmlns="http://www.w3.org/1999/xhtml">
                    <p>New tests</p>
                </t:description>
            </t:revision>
        </t:revision-history>
    </t:info>
    <t:description xmlns="http://www.w3.org/1999/xhtml">
        <p>Tests p:choose with multiple output ports where some are declared as producing sequences and some not. (ported from choose #007 of 1.0 test-suite)</p>
    </t:description>
    <t:pipeline>
        <p:declare-step name="pipeline" xmlns:p="http://www.w3.org/ns/xproc" version="3.0">
            <p:output port="result"/>
            <p:input port="source">
                <doc/>
            </p:input>
            <p:choose>
                <p:when test="1 = 1">
                    <p:output port="result"/>
                    <p:identity/>
                </p:when>
                <p:otherwise>
                    <p:output port="result" sequence="true"/>
                    <p:identity/>
                </p:otherwise>
            </p:choose>    
        </p:declare-step>
    </t:pipeline>
    <t:schematron>
        <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron" xmlns="http://www.w3.org/1999/xhtml">
            <s:pattern>
                <s:rule context="/">
                    <s:assert test="/doc">Root element is not 'doc'.</s:assert>
                </s:rule>
            </s:pattern>
        </s:schema>
    </t:schematron>
</t:test>
