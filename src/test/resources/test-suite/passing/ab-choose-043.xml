<?xml version="1.0" encoding="UTF-8"?>
<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0" expected="fail"
    xmlns:err="http://www.w3.org/ns/xproc-error" code="err:XS0038">
    <t:info>
        <t:title>p:choose-043 (AB)</t:title>
        <t:revision-history>
            <t:revision>
                <t:date>2019-04-05</t:date>
                <t:author>
                    <t:name>Achim Berndzen</t:name>
                </t:author>
                <t:description xmlns="http://www.w3.org/1999/xhtml">
                    <p>New tests</p>
                </t:description>
            </t:revision>
        </t:revision-history>
    </t:info>
    <t:description xmlns="http://www.w3.org/1999/xhtml">
        <p>Test XS0038 is raised, if @when is missing on p:when</p>
    </t:description>
    <t:pipeline>
        <p:declare-step xmlns:p="http://www.w3.org/ns/xproc" version="3.0">
            <p:output port="result"/>
            
            <p:identity>
                <p:with-input>
                    <doc1 />
                </p:with-input>
            </p:identity>
            
            <p:choose>
                <p:when>
                    <p:identity>
                        <p:with-input><correct /></p:with-input>
                    </p:identity>
                </p:when>
            </p:choose>
            
        </p:declare-step>
    </t:pipeline>
</t:test>
