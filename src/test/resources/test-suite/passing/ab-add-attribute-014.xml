<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0" expected="pass">
   <t:info>
      <t:title>Add-attribute-014 (AB)</t:title>
      <t:revision-history>
         <t:revision>
            <t:date>2019-02-16</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Added new tests for p:add-attribute.</p>
            </t:description>
         </t:revision>
      </t:revision-history>
   </t:info>
   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Tests adding attribute in namespace with p:add-attribute (attribute with same local name present).</p>
   </t:description>
   <t:pipeline>
      <p:declare-step version="3.0" xmlns:p="http://www.w3.org/ns/xproc">
         <p:output port="result" />
         
         <p:add-attribute match="/doc" attribute-value="5">
            <p:with-input><doc x:att='4' xmlns:x="http://att-namespace"/></p:with-input>
            <p:with-option name="attribute-name" select="'Q{http://att-namespace1}att'" />
         </p:add-attribute>
      </p:declare-step>
   </t:pipeline>
   
   <t:schematron>
      <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron">
          <s:ns prefix="a" uri="http://att-namespace" />
          <s:ns prefix="b" uri="http://att-namespace1" />
          <s:pattern>
            <s:rule context="/">
               <s:assert test="doc">The document root is not doc.</s:assert>
               <s:assert test="doc/@a:att">There is not attribute "Q{http://att-namespace}att" at doc.</s:assert>
               <s:assert test="doc/@a:att=4">Value of attribute "Q{http://att-namespace}att" is not 4.</s:assert>
               <s:assert test="doc/@b:att">There is not attribute "Q{http://att-namespace1}att" at doc.</s:assert>
               <s:assert test="doc/@b:att=5">Value of attribute "Q{http://att-namespace1}att" is not 5.</s:assert>
            </s:rule>
         </s:pattern>
      </s:schema>
   </t:schematron>
</t:test>