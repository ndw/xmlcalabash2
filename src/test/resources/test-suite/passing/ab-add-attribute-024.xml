<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0" xmlns:err="http://www.w3.org/ns/xproc-error" expected="fail" code="err:XC0023">
   <t:info>
      <t:title>Add-attribute-024 (AB)</t:title>
      <t:revision-history>
         <t:revision>
            <t:date>2019-02-16</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Added new tests for p:add-attribute.</p>
            </t:description>
         </t:revision>
      </t:revision-history>
   </t:info>
   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Tests an error to be raised if match on p:add-attribute matches processing-instruction.</p>
   </t:description>
   <t:pipeline>
      <p:declare-step version="3.0" xmlns:p="http://www.w3.org/ns/xproc">
         <p:output port="result" />
         
         
         <p:add-attribute match="/doc/processing-instruction()" attribute-value="5" attribute-name="att" >
            <p:with-input>
               <doc attribute="3">
                  Some text
                  <!-- a comment -->
                  <?pi ?>
               </doc>
            </p:with-input>
         </p:add-attribute>
      </p:declare-step>
   </t:pipeline>
</t:test>