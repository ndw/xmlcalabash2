   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Tests p:document with a simple text document in UTF-8 (no charset!).</p>
   </t:description>
   <t:pipeline>
      <p:declare-step xmlns:p="http://www.w3.org/ns/xproc" version="3.0">
            <p:output port="result"/>        

            <p:identity>
                <p:with-input>
                    <p:document href="../documents/text-file-utf-8.txt" content-type="text/plain"/>
                </p:with-input>
            </p:identity>
            <p:wrap-sequence wrapper="doc"/>
            
        </p:declare-step>
   </t:pipeline>
   <t:schematron>
      <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron" xmlns="http://www.w3.org/1999/xhtml">
         <s:pattern>
            <s:rule context="/">
               <s:assert test="doc">The document root is not doc.</s:assert>
               <s:assert test="doc/text() = 'This is a simple text file in UTF-8: ä ö ü'">Text is not correct.</s:assert>
            </s:rule>
         </s:pattern>
      </s:schema>
   </t:schematron>
</t:test>