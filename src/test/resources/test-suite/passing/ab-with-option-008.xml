<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0" expected="pass">
   <t:info>
      <t:title>With-option 008</t:title>
      <t:revision-history>
         <t:revision>
            <t:date>2018-09-15T11:06:16+02:00</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Some tests changed and new tests</p>
            </t:description>
         </t:revision>
      </t:revision-history>
   </t:info>
   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Tests reference to default readable port in an option short-cut</p>
   </t:description>
   <t:pipeline>
      <p:declare-step xmlns:p="http://www.w3.org/ns/xproc" name="main" version="3.0">
            <p:output port="result"/>
            
            <p:identity>
                <p:with-input>
               <doc>5</doc>
            </p:with-input>
            </p:identity>
            
            <p:add-attribute attribute-name="att" attribute-value="{/doc/text()}">
                <p:with-input>
               <doc/>
            </p:with-input>
            </p:add-attribute>
        </p:declare-step>
   </t:pipeline>
   <t:schematron>
      <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron" xmlns="http://www.w3.org/1999/xhtml">
         <s:pattern>
            <s:rule context="/">
               <s:assert test="doc">The document root is not doc.</s:assert>
               <s:assert test="doc/@att='5'">Value of 'att' is not 5.</s:assert>
            </s:rule>
         </s:pattern>
      </s:schema>
   </t:schematron>
</t:test>
