<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0" expected="pass">
    <t:info>
        <t:title>DRP as context for p:document/@href 012</t:title>
        <t:revision-history>
             <t:revision>
                <t:date>2018-12-30</t:date>
                <t:author>
                    <t:name>Achim Berndzen</t:name>
                </t:author>
                <t:description xmlns="http://www.w3.org/1999/xhtml">
                    <p>Created new test</p>
                </t:description>
            </t:revision>
        </t:revision-history>
    </t:info>
    <t:description xmlns="http://www.w3.org/1999/xhtml">
        <p>Tests DRP is context node for p:document/@href in p:othwerwise</p>
    </t:description>
    <t:pipeline>
        <p:declare-step xmlns:p="http://www.w3.org/ns/xproc" version="3.0">
            <p:output port="result"/>
            
            <p:identity>
                <p:with-input>
                    <doc>
                        <value>../documents/ab-doc2.xml</value>
                    </doc>
                </p:with-input>
            </p:identity>
            
            <p:choose>
                <p:when test="false()">
                    <p:identity>
                        <p:with-input><wrong-result /></p:with-input>
                    </p:identity>
                </p:when>
                <p:otherwise>
                    <p:identity>
                        <p:with-input>
                            <p:document href="{/doc/value/text()}" />
                        </p:with-input>
                    </p:identity>
                </p:otherwise>
            </p:choose>
        </p:declare-step>
    </t:pipeline>
    <t:schematron>
        <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron" xmlns="http://www.w3.org/1999/xhtml">
            <s:pattern>
                <s:rule context="/">
                    <s:assert test="/doc">Document root is not named 'doc'.</s:assert>
                    <s:assert test="/doc/@att='1'">Attribute 'att' does not have value '1'.</s:assert>
                </s:rule>
            </s:pattern>
        </s:schema>
    </t:schematron>
</t:test>
