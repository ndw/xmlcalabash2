<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0" expected="pass">
   <t:info>
      <t:title>Contenttypes 013</t:title>
      <t:revision-history>
         <t:revision>
            <t:date>2019-04-26</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Additional tests for content-types with shortcuts</p>
            </t:description>
         </t:revision>
      </t:revision-history>
   </t:info>
   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Tests shortcut "text" works correctly.</p>
   </t:description>
   <t:pipeline>
      <p:declare-step xmlns:p="http://www.w3.org/ns/xproc" 
                      xmlns:test="http://test" version="3.0">
            <p:output port="result" />
         
            <p:declare-step type="test:step">
               <p:input port="source" content-types="text" />
               <p:output port="result" />
               
               <p:identity />
            </p:declare-step>
            
            <test:step> <!-- Tests text/plain -->
               <p:with-input>
                  <p:inline content-type="text/plain">text</p:inline>
               </p:with-input>
            </test:step>
            
            <test:step> <!-- Tests text with wildcard -->
               <p:with-input>
                  <p:inline content-type="text/csv">text</p:inline>
               </p:with-input>
            </test:step>
            
         <p:try xmlns:err="http://www.w3.org/ns/xproc-error">
            <test:step> <!-- Test excluded text/html -->
               <p:with-input>
                  <p:inline content-type="text/html">
                     <doc />
                  </p:inline>
               </p:with-input>
            </test:step>
            <p:catch code="err:XD0038">
               <p:try>
                  <test:step> <!-- Test excluded text/xml -->
                     <p:with-input>
                        <p:inline content-type="text/xml">
                           <doc />
                        </p:inline>
                     </p:with-input>
                  </test:step>
                  <p:catch code="err:XD0038">
                     <p:identity>
                        <p:with-input><passed /></p:with-input>
                     </p:identity>
                  </p:catch>
               </p:try>
            </p:catch>
         </p:try>
      </p:declare-step>
   </t:pipeline>
   <t:schematron>
      <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron" xmlns="http://www.w3.org/1999/xhtml">
         <s:pattern>
            <s:rule context="/">
               <s:assert test="/passed">Root element is not 'passed'.</s:assert>
            </s:rule>
         </s:pattern>
      </s:schema>
   </t:schematron>
</t:test>