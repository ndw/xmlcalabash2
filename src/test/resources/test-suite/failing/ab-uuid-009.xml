<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0" expected="pass">
   <t:info>
      <t:title>uuid 009 (AB)</t:title>
      <t:revision-history>
         <t:revision>
            <t:date>2019-06-16</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Tests for p:uuid</p>
            </t:description>
         </t:revision>
      </t:revision-history>
   </t:info>
   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Testing p:uuid preserves content-type text/html</p>
   </t:description>
   <t:pipeline>
      <p:declare-step xmlns:p="http://www.w3.org/ns/xproc" version="3.0">
         <p:output port="result"/>
         
         <p:uuid match="doc/a">
            <p:with-input>
               <p:inline content-type="text/html">
                  <doc a="5"/>
               </p:inline>
            </p:with-input>
         </p:uuid>
         <p:identity>
            <p:with-input><content-type>{p:document-property(.,'content-type')}</content-type></p:with-input>
         </p:identity>
      </p:declare-step>
   </t:pipeline>
   
   <t:schematron>
      <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron">
         <s:pattern>
            <s:rule context="/">
               <s:assert test="content-type">The document root is not content-type.</s:assert>
               <s:assert test="content-type/text()='text/html'">Value of content-type is not 'text/html'.</s:assert>
            </s:rule>
         </s:pattern>
      </s:schema>
   </t:schematron>
</t:test>