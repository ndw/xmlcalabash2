<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0" expected="pass">
   <t:info>
      <t:title>p:set-attributes-004 (AB)</t:title>
      <t:revision-history>
         <t:revision>
            <t:date>2019-05-19</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Tests for p:set-attributes</p>
            </t:description>
         </t:revision>
      </t:revision-history>
   </t:info>
   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Tests p:set-attributes</p>
   </t:description>
   <t:input port="source">
      <doc att1="3" a:att1="4" xmlns:a="http://xproc.org/ns/testsuite/attributes"/>
   </t:input>
   <t:pipeline>
      <p:declare-step xmlns:p="http://www.w3.org/ns/xproc" version="3.0">
         <p:input port="source" />
         <p:output port="result"/>
            
         <p:set-attributes match="*">
            <p:with-input port="attributes">
               <p:inline>
                  <attributes att="1" a:att="2" xmlns:a="http://xproc.org/ns/testsuite/attributes">
                     <a:foo test="this attribute should not show up"/>
                  </attributes>  
               </p:inline>
            </p:with-input>
         </p:set-attributes>
      </p:declare-step>
   </t:pipeline>
   <t:schematron>
      <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron" xmlns="http://www.w3.org/1999/xhtml">
         <s:ns uri="http://xproc.org/ns/testsuite/attributes" prefix="a" />
         <s:pattern>
            <s:rule context="/">
               <s:assert test="doc">Root element is not 'doc'.</s:assert>
               <s:assert test="/doc/@att='1'">Root element does not have an attribute 'a' with value '1'.</s:assert>
               <s:assert test="/doc/@a:att='2'">Root element does not have an attribute Q{http://xproc.org/ns/testsuite/attributes}att with value '2'.</s:assert>
               <s:assert test="/doc/@att1='3'">Root element does not have an attribute 'att' with value '3'.</s:assert>
               <s:assert test="/doc/@a:att1='4'">Root element does not have an attribute Q{http://xproc.org/ns/testsuite/attributes}att1 with value '4'.</s:assert>
               
            </s:rule>
         </s:pattern>
      </s:schema>
   </t:schematron>
</t:test>