<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0" expected="pass">
   <t:info>
      <t:title>Contenttypes 029</t:title>
      <t:revision-history>
         <t:revision>
            <t:date>2019-04-26</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Additional tests for content-types with shortcuts</p>
            </t:description>
         </t:revision>
      </t:revision-history>
   </t:info>
   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Tests TVT with HTML media type copies nodes.</p>
   </t:description>
   <t:pipeline>
      <p:declare-step xmlns:p="http://www.w3.org/ns/xproc" version="3.0">
         <p:output port="result" />
         <p:variable name="doc" select=".">
            <doc>
               <a>text</a>
            </doc>
         </p:variable>
         
         <p:identity>
            <p:with-input>
               <p:inline content-type="application/xhtml+xml">
                  <html>{$doc/doc/a}</html>
               </p:inline>
            </p:with-input>
         </p:identity>
      </p:declare-step>
   </t:pipeline>
   <t:schematron>
      <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron" xmlns="http://www.w3.org/1999/xhtml">
         <s:pattern>
            <s:rule context="/">
               <s:assert test="/html">Root element is not 'html'.</s:assert>
               <s:assert test="/html/a">Root element does an element 'a'.</s:assert>
               <s:assert test="/html/a/text()='text'">Element 'a' does not have a text child with 'text'.</s:assert>
            </s:rule>
         </s:pattern>
      </s:schema>
   </t:schematron>
</t:test>