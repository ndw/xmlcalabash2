<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0" expected="pass">
   <t:info>
      <t:title>Connection 020</t:title>
      <t:revision-history>
         <t:revision>
            <t:date>2018-09-15T11:06:16+02:00</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Some tests changed and new tests</p>
            </t:description>
         </t:revision>
      </t:revision-history>
   </t:info>
   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Checks that DRP counts a connection for short-cut AVT and primary input port.</p>
   </t:description>
   <t:pipeline>
      <p:declare-step xmlns:p="http://www.w3.org/ns/xproc" version="3.0">
            <p:output port="result"/>
            
            <p:identity>
                <p:with-input>
                    <doc>4</doc>
                </p:with-input>
            </p:identity>
            <p:add-attribute attribute-name="att" attribute-value="{/doc}"/>

        </p:declare-step>
   </t:pipeline>
   <t:schematron>
      <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron" xmlns="http://www.w3.org/1999/xhtml">
         <s:pattern>
            <s:rule context="/">
               <s:assert test="doc">The root is not doc.</s:assert>
               <s:assert test="doc/@att='4'">Value of attribute 'att' is not correct.</s:assert>
               <s:assert test="count(doc/node())=1">The root element should have exactly one child.</s:assert>
               <s:assert test="doc/text()='4'">Text node as root child is not correct.</s:assert>
            </s:rule>
         </s:pattern>
      </s:schema>
   </t:schematron>
</t:test>