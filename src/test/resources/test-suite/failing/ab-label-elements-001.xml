<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0" expected="pass">
   <t:info>
      <t:title>label-elements 001 (AB)</t:title>
      <t:revision-history>
         <t:revision>
            <t:date>2019-05-04</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Ported test from 1.0 test suite</p>
            </t:description>
         </t:revision>
      </t:revision-history>
   </t:info>
   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Testing p:label-elements.</p>
   </t:description>
   <t:pipeline>
      <p:declare-step version="3.0" xmlns:p="http://www.w3.org/ns/xproc">
         <p:output port="result" />
         <p:input port="source">
            <doc>
            <div>
               <p>Some para.</p>
               <p>Some other para.</p>
            </div>
            </doc>
         </p:input>
         
         <p:label-elements/>
         
         <p:for-each>
            <p:output port="result"/>
            <p:with-input select="//*[@xml:id]"/>
            <p:identity/>
         </p:for-each>
         
         <p:count/>
      </p:declare-step>
   </t:pipeline>
   
   <t:schematron>
      <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron">
         <s:ns uri="http://www.w3.org/ns/xproc-step" prefix="c" />
         <s:pattern>
            <s:rule context="/">
               <s:assert test="c:result">The document root is not c:result.</s:assert>
               <s:assert test="c:result/text()='4'">Value of c:result is not '4'.</s:assert>
            </s:rule>
         </s:pattern>
      </s:schema>
   </t:schematron>
</t:test>