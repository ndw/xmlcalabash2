<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0" expected="pass">
   <t:info>
      <t:title>p:rename-007a (AB)</t:title>
      <t:revision-history>
         <t:revision>
            <t:date>2019-05-18</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Ported tests for p:rename</p>
            </t:description>
         </t:revision>
      </t:revision-history>
   </t:info>
   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Tests new-namespace and new-prefix. If you attempt
         to duplicate a prefix, make sure the namespace bindings don't
         get mangled!</p>
   </t:description>
   <t:input port='source'>
      <document>
         <element bar:baz="baz" xmlns:bar="http://bar.com/" attr="value"/>
      </document>
   </t:input>
   <t:pipeline>
      <p:declare-step xmlns:p="http://www.w3.org/ns/xproc" version="3.0">
         <p:input port="source" />
         <p:output port="result"/>
            
         <p:rename match="element/@attr" new-name="{QName('http://bar2.com/','bar:attr')}" />
      </p:declare-step>
   </t:pipeline>
   <t:schematron>
      <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron" xmlns="http://www.w3.org/1999/xhtml">
         <s:ns uri="http://bar.com/" prefix="bar" />
         <s:ns uri="http://bar2.com/" prefix="bar2" />
         <s:pattern>
            <s:rule context="/">
               <s:assert test="document">The root element is not 'document'.</s:assert>
               <s:assert test="document/element">Root element does not have a child 'element'.</s:assert>
               <s:assert test="document/element/@bar:baz">Element 'element' does not have an attribute Q{http://bar.com}baz.</s:assert>
               <s:assert test="document/element/@bar2:attr">Element 'element' does not have an attribute Q{http://bar2.com}attr.</s:assert>
            </s:rule>
         </s:pattern>
      </s:schema>
   </t:schematron>
</t:test>