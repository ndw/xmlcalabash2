   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Checks that DRP counts a connection for TVT as child of p:inline.</p>
   </t:description>
   <t:pipeline>
      <p:declare-step xmlns:p="http://www.w3.org/ns/xproc" version="3.0">
            <p:output port="result"/>
            
            <p:identity>
                <p:with-input>
                    <doc value="4"/>
                </p:with-input>
            </p:identity>
           
            <p:identity>
                <p:with-input>
                    <p:inline>
                        <result>{xs:string(/doc/@value)}</result>
                    </p:inline>
                </p:with-input>
            </p:identity>

        </p:declare-step>
   </t:pipeline>
   <t:schematron>
      <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron" xmlns="http://www.w3.org/1999/xhtml">
         <s:pattern>
            <s:rule context="/">
               <s:assert test="result">The root is not result.</s:assert>
               <s:assert test="count(result/node())=1">The root element should have exactly one child.</s:assert>
               <s:assert test="/result/text()='4'">The text child of result is not '4'.</s:assert>
            </s:rule>
         </s:pattern>
      </s:schema>
   </t:schematron>
</t:test>