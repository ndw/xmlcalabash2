<?xml version="1.0" encoding="UTF-8"?>
<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0" expected="pass">
    <t:info>
        <t:title>p:choose-024 (AB)</t:title>
        <t:revision-history>
            <t:revision>
                <t:date>2019-04-05</t:date>
                <t:author>
                    <t:name>Achim Berndzen</t:name>
                </t:author>
                <t:description xmlns="http://www.w3.org/1999/xhtml">
                    <p>New tests</p>
                </t:description>
            </t:revision>
        </t:revision-history>
    </t:info>
    <t:description xmlns="http://www.w3.org/1999/xhtml">
        <p>Tests p:choose with different XPath contexts (ported from choose #003 of 1.0 test-suite)</p>
    </t:description>
    <t:pipeline>
        <p:declare-step xmlns:p="http://www.w3.org/ns/xproc" version="3.0">
            <p:output port="result"/>
             
            <p:choose>
                <p:with-input>
                    <p:inline>
                        <doc>
                            <p>Para about XML</p>
                        </doc>
                    </p:inline>
                </p:with-input>
                <p:when test="//p[contains(., 'XML')]">
                    <p:with-input>
                        <p:inline>
                            <doc>
                                <p>Para about something else</p>
                            </doc>
                        </p:inline>
                    </p:with-input>
                    <p:identity>
                        <p:with-input port="source">
                            <p:inline>
                                <result>Incorrect</result>
                            </p:inline>
                        </p:with-input>
                    </p:identity>
                </p:when>
                <p:when test="//p[contains(., 'XML')]">
                    <p:identity>
                        <p:with-input port="source">
                            <p:inline>
                                <result>Correct</result>
                            </p:inline>
                        </p:with-input>
                    </p:identity>
                </p:when>
                <p:otherwise>
                    <p:identity>
                        <p:with-input port="source">
                            <p:inline>
                                <result>Incorrect</result>
                            </p:inline>
                        </p:with-input>
                    </p:identity>
                </p:otherwise>
            </p:choose>
        </p:declare-step>
    </t:pipeline>
    <t:schematron>
        <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron" xmlns="http://www.w3.org/1999/xhtml">
            <s:pattern>
                <s:rule context="/">
                    <s:assert test="/result">Root element is not 'result'.</s:assert>
                    <s:assert test="/result/text()='Correct'">Text in 'result' is not 'Correct'.</s:assert>
                </s:rule>
            </s:pattern>
        </s:schema>
    </t:schematron>
</t:test>
