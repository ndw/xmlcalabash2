<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0" expected="pass">
   <t:info>
      <t:title>p:string-replace 005 (AB)</t:title>
      <t:revision-history>
         <t:revision>
            <t:date>2019-05-29</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Porting 1.0 tests for p:string-replace</p>
            </t:description>
         </t:revision>
      </t:revision-history>
   </t:info>
   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Tests p:string-replace</p>
   </t:description>
   
   <t:input port="source">
      <doc>
         <para version="1">some text</para>
         <para version="2">some other text</para>
         <para version="3">some <emph version="4">emphasized</emph> text</para>
      </doc>   
   </t:input>
   
   <t:pipeline>
      <p:declare-step xmlns:p="http://www.w3.org/ns/xproc" version="3.0">
         <p:input port="source" />
         <p:output port="result"/>
            
         <p:string-replace match="*/@version" replace="number(.)+1"/>
         
      </p:declare-step>
   </t:pipeline>
   <t:schematron>
      <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron" xmlns="http://www.w3.org/1999/xhtml">
         <s:pattern>
            <s:rule context="/">
               <s:assert test="doc">Root element is not 'doc'.</s:assert>
               <s:assert test="doc/para[1]/@version='2'">'para'[1] does not have @version='2'.</s:assert>
            </s:rule>
         </s:pattern>
      </s:schema>
   </t:schematron>
</t:test>