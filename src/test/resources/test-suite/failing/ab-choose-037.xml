<?xml version="1.0" encoding="UTF-8"?>
<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0" expected="pass">
    <t:info>
        <t:title>p:choose-037 (AB)</t:title>
        <t:revision-history>
            <t:revision>
                <t:date>2019-04-05</t:date>
                <t:author>
                    <t:name>Achim Berndzen</t:name>
                </t:author>
                <t:description xmlns="http://www.w3.org/1999/xhtml">
                    <p>New tests</p>
                </t:description>
            </t:revision>
        </t:revision-history>
    </t:info>
    <t:description xmlns="http://www.w3.org/1999/xhtml">
        <p>Test that error in p:choose/p:when is not treated as 'true'/'false' (implicit p:otherwise).</p>
    </t:description>
    <t:pipeline>
        <p:declare-step xmlns:p="http://www.w3.org/ns/xproc" version="3.0">
            <p:output port="result"/>
            
            <p:identity>
                <p:with-input><error /></p:with-input>
            </p:identity>
            
            <p:try>
                <p:choose>
                    <p:when test="error()">
                        <p:identity />
                    </p:when>
                </p:choose>
                <p:catch>
                    <p:identity>
                        <p:with-input><success /></p:with-input>
                    </p:identity>
                </p:catch>
            </p:try>
            
        </p:declare-step>
    </t:pipeline>
    <t:schematron>
        <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron" xmlns="http://www.w3.org/1999/xhtml">
            <s:pattern>
                <s:rule context="/">
                    <s:assert test="/success">Root element is not 'success'.</s:assert>
                </s:rule>
            </s:pattern>
        </s:schema>
    </t:schematron>
</t:test>
