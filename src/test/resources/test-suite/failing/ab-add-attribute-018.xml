<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0" expected="pass">
   <t:info>
      <t:title>Add-attribute-018 (AB)</t:title>
      <t:revision-history>
         <t:revision>
            <t:date>2019-02-16</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Added new tests for p:add-attribute.</p>
            </t:description>
         </t:revision>
      </t:revision-history>
   </t:info>
   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Tests that adding xml:base also changes element's base-uri.</p>
   </t:description>
   <t:pipeline>
      <p:declare-step version="3.0" xmlns:p="http://www.w3.org/ns/xproc">
         <p:output port="result" />
         <p:identity>
            <p:with-input>
               <doc xml:base-uri="http://some-uri"/>
            </p:with-input>
         </p:identity>
         
         <p:add-attribute attribute-value="http://changed-uri" attribute-name="xml:base" />
         <p:identity>
            <p:with-input>
               <result>{base-uri(/doc)}</result>
            </p:with-input>
         </p:identity>
      </p:declare-step>
   </t:pipeline>
   
   <t:schematron>
      <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron">
          <s:pattern>
            <s:rule context="/">
               <s:assert test="result">The document root is not 'result'.</s:assert>
               <s:assert test="result/text()='http://changed-uri'">Base-uri of element 'doc' is not 'http://changed-uri'.</s:assert>
            </s:rule>
         </s:pattern>
      </s:schema>
   </t:schematron>
</t:test>