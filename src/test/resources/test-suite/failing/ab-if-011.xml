<?xml version="1.0" encoding="UTF-8"?>
<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0" expected="pass">
    <t:info>
        <t:title>p:if-011 (AB)</t:title>
        <t:revision-history>
            <t:revision>
                <t:date>2019-04-06</t:date>
                <t:author>
                    <t:name>Achim Berndzen</t:name>
                </t:author>
                <t:description xmlns="http://www.w3.org/1999/xhtml">
                    <p>New tests</p>
                </t:description>
            </t:revision>
        </t:revision-history>
    </t:info>
    <t:description xmlns="http://www.w3.org/1999/xhtml">
        <p>Test p:if where @when evaluates to false() and two output ports.</p>
    </t:description>
    <t:pipeline>
        <p:declare-step xmlns:p="http://www.w3.org/ns/xproc" version="3.0">
            <p:output port="result"/>
            
            <p:identity>
                <p:with-input><doc /></p:with-input>
            </p:identity>
            <p:if test="false()" name="if">
                <p:output port="result" primary="true" />
                <p:output port="secondary">
                    <sec />
                </p:output>
                <p:add-attribute match="/doc" attribute-name="a" attribute-value="2" />
            </p:if>
            <p:wrap-sequence wrapper="result" >
                <p:with-input pipe="@if secondary@if" />
            </p:wrap-sequence>
        </p:declare-step>
    </t:pipeline>
    <t:schematron>
        <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron" xmlns="http://www.w3.org/1999/xhtml">
            <s:pattern>
                <s:rule context="/">
                    <s:assert test="/result">Root element is not 'result'.</s:assert>
                    <s:assert test="count(/result/*)=1">Root should only have one child.</s:assert>
                    <s:assert test="/result/doc">Child of 'result' is not 'doc'.</s:assert>
                </s:rule>
            </s:pattern>
        </s:schema>
    </t:schematron>
</t:test>
