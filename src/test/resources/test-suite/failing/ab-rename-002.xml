<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0" expected="pass">
   <t:info>
      <t:title>p:rename-002 (AB)</t:title>
      <t:revision-history>
         <t:revision>
            <t:date>2019-05-18</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Ported tests for p:rename</p>
            </t:description>
         </t:revision>
      </t:revision-history>
   </t:info>
   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Tests p:rename</p>
   </t:description>
   <t:input port='source'>
      <doc test:foo="value" xmlns:test="http://test.com"/>
   </t:input>
   <t:pipeline>
      <p:declare-step xmlns:p="http://www.w3.org/ns/xproc" version="3.0">
         <p:input port="source" />
         <p:output port="result"/>
            
         <p:rename match="@test:foo" new-name="test2:bar"
            xmlns:test="http://test.com" xmlns:test2="http://test2.com"/>
         
      </p:declare-step>
   </t:pipeline>
   <t:schematron>
      <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron" xmlns="http://www.w3.org/1999/xhtml">
         <s:ns uri="http://test2.com" prefix="test2" />
         <s:pattern>
            <s:rule context="/">
               <s:assert test="doc">The root element is not 'doc'.</s:assert>
               <s:assert test="doc/@test2:bar">The root element does not have an attribute Q{http://test2.com}bar.</s:assert>
               <s:assert test="doc/@test2:bar='value'">The attribute's value is not 'value'.</s:assert>
            </s:rule>
         </s:pattern>
      </s:schema>
   </t:schematron>
</t:test>