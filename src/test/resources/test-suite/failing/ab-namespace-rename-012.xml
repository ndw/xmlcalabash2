<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0" expected="pass">
   <t:info>
      <t:title>p:namespace-rename-012 (AB)</t:title>
      <t:revision-history>
         <t:revision>
            <t:date>2019-05-17</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Ported tests for p:namespace-rename</p>
            </t:description>
         </t:revision>
      </t:revision-history>
   </t:info>
   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Tests p:namespace-rename</p>
   </t:description>
   <t:input port='source'>
      <d:doc xmlns:d="http://bar.com" bar:attr1="val1" x:attr2="val2" xmlns:x="http://test.com" xmlns:bar="http://bar.com">
         <p/>
         <p:p xmlns:p="http://bar.com"/>
      </d:doc>
   </t:input>
   <t:pipeline>
      <p:declare-step xmlns:p="http://www.w3.org/ns/xproc" version="3.0">
         <p:input port="source" />
         <p:output port="result"/>
            
         <p:namespace-rename from="http://bar.com" apply-to="attributes"/>
         
      </p:declare-step>
   </t:pipeline>
   <t:schematron>
      <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron" xmlns="http://www.w3.org/1999/xhtml">
         <s:ns uri="http://test.com" prefix="x" />
         <s:ns uri="http://bar.com" prefix="bar" />
         <s:pattern>
            <s:rule context="/">
               <s:assert test="bar:doc">The root element is not 'Q{http://bar.com}doc'.</s:assert>
               <s:assert test="*/@x:attr2">Root does not have an attribute Q{http://test.com}attr2.</s:assert>
               <s:assert test="*/@attr1">Root does not have an attribute Q{}attr1.</s:assert>
               <s:assert test="bar:doc/bar:p">Root does not have a child Q{http://bar.com}p.</s:assert>
               <s:assert test="bar:doc/p">Root does not have a child Q{}p.</s:assert>
            </s:rule>
         </s:pattern>
      </s:schema>
   </t:schematron>
</t:test>