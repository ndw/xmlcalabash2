<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0" 
   expected="fail" code="err:XD0038"
   xmlns:err="http://www.w3.org/ns/xproc-error">
   <t:info>
      <t:title>Contenttypes 023</t:title>
      <t:revision-history>
         <t:revision>
            <t:date>2019-04-26</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Additional tests for content-types with shortcuts</p>
            </t:description>
         </t:revision>
      </t:revision-history>
   </t:info>
   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Tests shortcut combination "application/xhtml+xml -application/xhtml+xml" works correctly (Order matters!).</p>
   </t:description>
   <t:pipeline>
      <p:declare-step xmlns:p="http://www.w3.org/ns/xproc" 
                      xmlns:test="http://test" version="3.0">
         <p:output port="result" />
         
         <p:declare-step type="test:step">
            <p:input port="source" content-types="application/xhtml+xml -application/xhtml+xml" />
            <p:output port="result" />
               
            <p:identity />
         </p:declare-step>
         
        <test:step>
            <p:with-input>
               <p:inline content-type="application/xhtml+xml">
                  <doc />
               </p:inline>
            </p:with-input>
         </test:step>

      </p:declare-step>
   </t:pipeline>
</t:test>