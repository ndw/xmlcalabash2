<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0" expected="pass">
   <t:info>
      <t:title>p:split-sequence-006 (AB)</t:title>
      <t:revision-history>
         <t:revision>
            <t:date>2019-05-22</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Ported tests for p:split-sequence</p>
            </t:description>
         </t:revision>
      </t:revision-history>
   </t:info>
   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Tests p:split-sequence</p>
   </t:description>
   
   <t:input port="source">
      <doc>
         <p/>
         <p/>
         <not-p/>
         <p/>
         <not-p/>
      </doc>
   </t:input>
   
   <t:pipeline>
      <p:declare-step name="pipeline" xmlns:p="http://www.w3.org/ns/xproc" version="3.0">
         <p:input port="source" />
         <p:output port="result"/>
         
         <p:split-sequence name="split" test="p" initial-only="true">
            <p:with-input port="source" select="/doc/*"/>
         </p:split-sequence>
         
         <p:sink/>
         
         <p:count>
            <p:with-input port="source">
               <p:pipe step="split" port="not-matched"/>
            </p:with-input>
         </p:count>            
      </p:declare-step>
   </t:pipeline>
   <t:schematron>
      <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron" xmlns="http://www.w3.org/1999/xhtml">
         <s:ns uri="http://www.w3.org/ns/xproc-step" prefix="c" />
         <s:pattern>
            <s:rule context="/">
               <s:assert test="c:result">Root element is not 'c:result'.</s:assert>
               <s:assert test="c:result/text()=3">Value of c:result is not 3.</s:assert>
            </s:rule>
         </s:pattern>
      </s:schema>
   </t:schematron>
</t:test>