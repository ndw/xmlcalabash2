<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0" 
   expected="fail" code="err:XD0054"
   xmlns:err="http://www.w3.org/ns/xproc-error">
   <t:info>
      <t:title>Contenttypes 027</t:title>
      <t:revision-history>
         <t:revision>
            <t:date>2019-04-26</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Additional tests for content-types with shortcuts</p>
            </t:description>
         </t:revision>
      </t:revision-history>
   </t:info>
   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Tests XD0054 is raised if HTML document is created with @encoding.</p>
   </t:description>
   <t:pipeline>
      <p:declare-step xmlns:p="http://www.w3.org/ns/xproc" version="3.0">
         <p:output port="result" />
         
         <p:identity>
            <p:with-input>
               <p:inline content-type="application/xhtml+xml" encoding="base64">
                  <html />
               </p:inline>
            </p:with-input>
         </p:identity>
      </p:declare-step>
   </t:pipeline>
</t:test>