<t:test xmlns:t="http://xproc.org/ns/testsuite/3.0" expected="pass">
   <t:info>
      <t:title>p:set-properties-002 (AB)</t:title>
      <t:revision-history>
         <t:revision>
            <t:date>2019-05-19</t:date>
            <t:author>
               <t:name>Achim Berndzen</t:name>
            </t:author>
            <t:description xmlns="http://www.w3.org/1999/xhtml">
               <p>Tests for p:set-properties</p>
            </t:description>
         </t:revision>
      </t:revision-history>
   </t:info>
   <t:description xmlns="http://www.w3.org/1999/xhtml">
      <p>Tests p:set-properties</p>
   </t:description>
   
   <t:pipeline>
      <p:declare-step xmlns:p="http://www.w3.org/ns/xproc" version="3.0">
         <p:output port="result"/>
            
         <p:set-properties properties="map{'key':'value'}">
            <p:with-input>
               <p:inline document-properties="map{'another':'value'}">
                  <doc />
               </p:inline>
            </p:with-input>
         </p:set-properties>
         
         <p:identity>
            <p:with-input select="p:document-properties-document(.)" />
         </p:identity>
      </p:declare-step>
   </t:pipeline>
   <t:schematron>
      <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron" xmlns="http://www.w3.org/1999/xhtml">
         <s:ns uri="http://www.w3.org/ns/xproc-step" prefix="c" />
         <s:pattern>
            <s:rule context="/">
               <s:assert test="c:document-properties">Root element is not 'c:document-properties'.</s:assert>
               <s:assert test="c:document-properties/content-type">No 'content-type' property found.</s:assert>
               <s:assert test="c:document-properties/content-type/text()='application/xml'">Element 'content-type' is not 'application/xml'.</s:assert>
               <s:assert test="c:document-properties/key/text()='value'">No 'key' property with value 'value' found.</s:assert>
               <s:assert test="count(c:document-properties/*)=2">Root element does not have exactly two children.</s:assert>
            </s:rule>
         </s:pattern>
      </s:schema>
   </t:schematron>
</t:test>