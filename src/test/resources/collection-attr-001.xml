<test xmlns='http://xproc.org/ns/testsuite/3.0' expected="pass">
  <pipeline>
<p:declare-step xmlns:p="http://www.w3.org/ns/xproc"
                xmlns:cx="http://xmlcalabash.com/ns/extensions"
                name="main"
                version="1.0">
  <p:output port="result"/>

  <p:identity name="id1">
    <p:input port="source">
      <p:inline>
        <doc/>
      </p:inline>
    </p:input>
  </p:identity>

  <p:identity name="id2">
    <p:input port="source">
      <p:inline>
        <doc/>
      </p:inline>
    </p:input>
  </p:identity>

  <p:identity name="combine">
    <p:input port="source" pipe="id1 id2"/>
  </p:identity>

  <p:variable name="a" select="count(collection())" collection="true"/>

  <cx:option-value>
    <p:with-option name="option" select="count(collection())" collection="true"/>
  </cx:option-value>

</p:declare-step>
  </pipeline>
  <schematron>
<s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron">
   <s:ns prefix="c" uri="http://www.w3.org/ns/xproc-step"/>
   <s:ns prefix="xsi" uri="http://www.w3.org/2001/XMLSchema-instance"/>
   <s:ns prefix="p" uri="http://www.w3.org/ns/xproc"/>

   <s:pattern>
     <s:rule context="/*">
       <s:assert test="self::c:result">
         The pipeline root is not c:result
       </s:assert>
       <s:assert test="string(.) = '2'">
         The result is not 2
       </s:assert>
     </s:rule>
   </s:pattern>
</s:schema>
  </schematron>
</test>
