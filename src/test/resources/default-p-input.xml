<test xmlns='http://xproc.org/ns/testsuite/3.0' expected="pass">
  <pipeline>
    <p:declare-step xmlns:p="http://www.w3.org/ns/xproc"
                    xmlns:ex="http://xmlcalabash.com/ext/foo"
                    name="main"
                    version="1.0">
      <p:output port="result"/>

      <p:identity name="two">
        <p:input port="source">
          <doc xmlns="">The p:inline element can be defaulted.</doc>
        </p:input>
      </p:identity>
    </p:declare-step>
  </pipeline>

  <schematron>
    <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron"
              xmlns:p="http://www.w3.org/ns/xproc"
              xmlns:rng="http://relaxng.org/ns/structure/1.0">
      <s:ns prefix="p" uri="http://www.w3.org/ns/xproc"/>

      <s:pattern>
        <s:rule context="/*">
          <s:assert test="self::doc">The pipeline root is not doc.</s:assert>
        </s:rule>
      </s:pattern>
    </s:schema>
  </schematron>
</test>
